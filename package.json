{
  "name": "bump-go",
  "version": "0.0.0",
  "private": true,
  "description": "Bumps Go to the latest current stable release available",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BBVA/bump-go.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "go",
    "bump"
  ],
  "author": "pancho horrillo",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/http-client": "^1.0.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@typescript-eslint/parser": "^4.3.0",
    "@vercel/ncc": "^0.24.1",
    "eslint": "^7.10.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.0.2",
    "jest": "^24.9.0",
    "jest-circus": "^26.4.2",
    "js-yaml": "^3.14.0",
    "prettier": "2.1.2",
    "ts-jest": "^24.3.0",
    "typescript": "^4.0.3"
  }
}
